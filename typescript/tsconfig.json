{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": true,
    "baseUrl": "src/",
    "rootDirs": [ "src/" ],
    "esModuleInterop": true
},
"include": [ "src/**/*" ],
"exclude": [ "./node_modules"],
"lib": [ "es2020" ],
"types": [
    "node"
]
}
